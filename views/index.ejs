<html lang="kr">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Í≤åÏãúÌåê</title>
  <script src="main.js"></script>
  <link rel="stylesheet" href="index.css">
</head>

<body>
  <div id="contain">
    <header>
      <h1><a href="/">Test Blog</a></h1>
    </header>
    <main>
      <div id="start-menu">
        <span>Ï†ÑÏ≤¥ Í∏Ä (<%=totalCount %>)</span>
        <% if (user.role==='admin' ) { %>
          <a href="/board/newpost" class="write-btn">‚úç</a>
          <form action="/login" method="post" class="write-btn">
            <input type="hidden" name="type" value="logout">
            <input type="submit" value="üì¥" class="write-btn">
          </form>
          <% } else if (user.role==='guest' ) {%>
            <p class="write-btn">Hello, <%=user.id%>
            </p>
            <form action="/login" method="post" class="write-btn">
              <input type="hidden" name="type" value="logout">
              <input type="submit" value="üì¥" class="write-btn">
            </form>
            <% } else if (user) {%>
              <button id="login-btn" class="write-btn">Login</button>
              <script>
                const loginBtn = document.querySelector('#login-btn');
                loginBtn.addEventListener('click', () => {
                  window.location.href = '/login';
                });
              </script>
              <%}%>
      </div>
      <div id="board">
        <% for (var i=0; i < indexNum; i++) { %>
          <div id="item">
            <a href="board/<%= data[i]._id %>">
              <h3 class="title">
                <%= data[i].title %>
              </h3>
              <span class="body">
                <%= data[i].body %>
              </span>
            </a>
          </div>
          <% } %>
            <div id="page-nation">
              <% var pageNum=parseInt((totalCount - 1) / 10); %>
                <% for (var k=1; k <=pageNum+1; k++) { %>
                  <a href="/?page=<%=k%>">
                    <%= k %>
                  </a>
                  <% } %>
            </div>
      </div>
    </main>
  </div>
</body>

</html>