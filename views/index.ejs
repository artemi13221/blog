<html lang="kr">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>게시판</title>
  <script src="main.js"></script>
  <link rel="stylesheet" href="index.css">
</head>

<body>
  <div id="contain">
    <header>
      <h1><a href="/">Test Blog</a></h1>
    </header>
    <main>
      <div id="start-menu">
        <span>전체 글 (<%=totalCount %>)</span>
        <% if (user.role === 'admin') { %>
          <a href="/newpost" class="write-btn">✍</a>
        <% } else if (user.role === 'guest') {%>
          <p class="write-btn">Hello, Guest!</p>
        <% } else if (user) {%>
          <button id="login-btn" class="write-btn">Login</button>
          <script>
            const loginBtn = document.querySelector('#login-btn');
            loginBtn.addEventListener('click', () => {
              window.location.href = '/login';
            });
          </script>
        <%}%>
      </div>
      <div id="board">
        <% for(var i=totalCount - 1; i>= 0; i--) { %>
          <div id="item">
            <a href="board/<%= data[i]._id %>">
              <h3 class="title">
                <%= data[i].title %>
              </h3>
              <span class="body">
                <%= data[i].body %>
              </span>
            </a>
          </div>
          <% } %>
      </div>
    </main>
  </div>
</body>

</html>